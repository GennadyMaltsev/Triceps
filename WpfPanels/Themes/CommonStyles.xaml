<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viblendEditors="clr-namespace:VIBlend.WPF.Controls;assembly=VIBlend.WPF.Editors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfPanels;component/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type FrameworkElement}" x:Key="MarginedFrameworkElementStyle">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
    </Style>

    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
    </Style>

    <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
    </Style>

    <Style TargetType="viblendEditors:DateTimeEditor" BasedOn="{StaticResource MarginedFrameworkElementStyle}">
        
    </Style>
</ResourceDictionary>
